{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/vite"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "outputDirectory" : "dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "server/server.js" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}
